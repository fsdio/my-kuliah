<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android_dasar.MainActivity">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOKOWI"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="200px"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_1"
        android:text="TAHUN 2023 GELAP"
        android:textSize="50px"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/text_1"
        android:text="TAHUN BARU GELAP GENERASI GELAP" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_2"
        android:layout_alignParentEnd="true"
        android:src="@drawable/joko"
        />

    <Button
        android:id="@+id/joko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_toLeftOf="@id/solusi"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="20dp"
        android:text="JOKOWI" />

    <Button
        android:id="@+id/solusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:text="SOLUSI" />

    <Button
        android:id="@+id/amin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_toRightOf="@id/solusi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-50dp"
        android:text="AMIN" />

</RelativeLayout>